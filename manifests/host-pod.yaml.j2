apiVersion: v1
kind: Pod
metadata:
  namespace: {{ name_space }}
  name: {{ pod_name }}
  labels:
    tft-tests: "{{ index }}"
    tft-port: "{{ port }}"
spec:
  hostNetwork: true
  dnsPolicy: ClusterFirstWithHostNet
  nodeSelector:
    kubernetes.io/hostname: {{ node_name }}
  containers:
  - name: {{ pod_name }}
    image: {{ test_image }}
    command: {{ command }}
    args: 
    - "{{ args }}"
    imagePullPolicy: IfNotPresent
    securityContext:
      capabilities:
        add: ["NET_ADMIN","NET_RAW"]
