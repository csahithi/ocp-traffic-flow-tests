apiVersion: v1
kind: Pod
metadata:
  namespace: {{ name_space }}
  name: {{ pod_name }}
  annotations:
    v1.multus-cni.io/default-network: {{ default_network }}
  labels:
    tft-tests: "{{ index }}"
    tft-port: "{{ port }}"
spec:
  nodeSelector:
    kubernetes.io/hostname: {{ node_name }}
  containers:
  - name: {{ pod_name }}
    image: {{ test_image }}
    command: {{ command }}
    args:
    - "{{ args }}"
    imagePullPolicy: {{ image_pull_policy }}
